<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_layout_third"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/details_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DETAILS"
        android:textSize="30dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:id="@+id/publisher_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publisher : "
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="112dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/details_third"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="112dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/by_text"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintVertical_bias="0.184" />

    <TextView
        android:id="@+id/publisher"
        android:layout_toRightOf="@id/publisher_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Wait.... "
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/details_third"
        app:layout_constraintLeft_toRightOf="@+id/publisher_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/by_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.205" />



    <TextView
        android:id="@+id/by_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By : "
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/details_third"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.110000014"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/By"
        android:layout_toRightOf="@id/by_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Wait.... "
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/publisher"
        app:layout_constraintLeft_toRightOf="@+id/by_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/year_text"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintVertical_bias="0.48"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:id="@+id/year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year :    "
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/details_third"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/Pages"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintVertical_bias="0.8"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/Year"
        android:layout_toRightOf="@id/year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Wait.... "
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/pages_text"
        app:layout_constraintLeft_toRightOf="@+id/year_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/By"
        app:layout_constraintHorizontal_bias="0.06"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:id="@+id/pages_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pages :    "
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/year_text"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintVertical_bias="0.060000002"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/Pages"
        android:layout_toRightOf="@id/pages_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Wait.... "
        app:layout_constraintLeft_toRightOf="@+id/pages_text"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Year"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.060000002"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <View
        android:id="@+id/divider_third"
        android:layout_width="368dp"
        android:layout_height="3dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/description_text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Pages"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.5" />


    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pages_text"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.26"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Wait...."
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/description_text"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintVertical_bias="0.079"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />





</android.support.constraint.ConstraintLayout>
